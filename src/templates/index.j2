{# Macros #}
{% from 'button.j2' import button %}

{# extending what? #}
{% extends 'base.j2' %}


{% block special_imports %}
	<script type="text/javascript" src="{{ url_for('static', filename='js/initialize.js') }}"></script>
	<script type="text/javascript" src="{{ url_for('static', filename='js/event_listeners.js') }}"></script>
	<script type="text/javascript" src="{{ url_for('static', filename='js/ajax_calls.js') }}"></script>
	<script type="text/javascript" src="{{ url_for('static', filename='js/questions_functions.js') }}"></script>
	<script type="text/javascript" src="{{ url_for('static', filename='js/main_content_functions.js') }}"></script>
{% endblock %}


{% block title %}
	{{title}}
{% endblock %}


{% block content %}
	<div class="grid grid-pad">
		<section class="navigation-container">
			<!-- area for start button etc. -->
			{{ button('start', 'start-training-button qanda-button btn btn-primary') }}
			{{ button('save', 'save-button qanda-button btn btn-primary') }}
			{{ button('load', 'load-button qanda-button btn btn-primary') }}
		</section>

		<section class="col-1-5 available-questions-container">
			<fieldset>
				<label>Available Questions</label>
				<select multiple="multiple" size="10">
					<!-- this select is empty and will be filled later -->
				</select>
				{{ button('enable', 'enable-selected-available-questions-button qanda-button btn-block btn-success') }}
				{{ button('enable all', 'enable-all-available-questions-button qanda-button btn-block btn-success') }}
				{{ button('disable', 'disable-selected-available-questions-button qanda-button btn-block btn-warning') }}
				{{ button('disable all', 'disable-all-available-questions-button qanda-button btn-block btn-warning') }}
			</fieldset>
		</section>

		<section class="col-1-5 active-questions-container">
			<fieldset>
				<label>Active Questions</label>
				<select multiple="multiple" size="10">

				</select>
				{{ button('deactivate', 'deactivate-selected-available-questions-button qanda-button btn-block btn-warning') }}
				{{ button('deactivate all', 'deactivate-all-available-questions-button qanda-button btn-block btn-warning') }}
			</fieldset>
		</section>

		<section class="col-2-5 main-content-container">
			Main Content
		</section>

		<section class="col-1-5 deactivated-questions-container">
			<fieldset>
				<label>Deactivated Questions</label>
				<select multiple="multiple" size="10">

				</select>
				{{ button('activate', 'activate-selected-available-questions-button qanda-button btn-block btn-success') }}
				{{ button('activate all', 'activate-all-available-questions-button qanda-button btn-block btn-success') }}
			</fieldset>
		</section>
	</div>
{% endblock %}
